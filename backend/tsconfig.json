{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "target": "ES2022",
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": true,
        "allowUnusedLabels": false,
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "rootDir": "./",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": ["app/**/*", "api/**/*"],
    "exclude": ["node_modules"]
}
